{
  "version": 2,
  "framework": "vite",
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "installCommand": "npm install",
  "devCommand": "npm run dev",
  "cleanUrls": true,
  "trailingSlash": false,
  "headers": [
    {
      "source": "/",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*).html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*).css",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "no-cache, no-store, must-revalidate"
        }
      ]
    },
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "rewrites": [
    { "source": "/api/meditation", "destination": "/api/meditation.js" },
    { "source": "/api/audio", "destination": "/api/audio.js" },
    { "source": "/api/quote", "destination": "/api/quote.js" },
    { "source": "/api/humandesign", "destination": "/api/humandesign.js" },
    { "source": "/api/intentionDescriptions", "destination": "/api/intentionDescriptions.js" },
    {
      "source": "/(.*)",
      "destination": "/"
    }
  ],
  "functions": {
    "api/meditation.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/audio.js": {
      "maxDuration": 60,
      "memory": 1024
    },
    "api/quote.js": {
      "maxDuration": 10,
      "memory": 256
    },
    "api/humandesign.js": {
      "maxDuration": 10,
      "memory": 256
    },
    "api/intentionDescriptions.js": {
      "maxDuration": 10,
      "memory": 256
    }
  }
}
